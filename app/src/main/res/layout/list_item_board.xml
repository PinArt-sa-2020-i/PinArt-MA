<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/nameListItemBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Un tablero jejeje"
        android:textSize="20dp"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        >

        <ImageView
            android:id="@+id/imageView01ListItemBoard"
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:background="@drawable/ic_pinart"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/imageView02ListItemBoard"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_pinart"
                >
            </ImageView>

            <ImageView
                android:id="@+id/imageView03ListItemBoard"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_pinart"
                >
            </ImageView>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>