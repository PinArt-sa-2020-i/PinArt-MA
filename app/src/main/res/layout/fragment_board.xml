<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/nameBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorSecondary"
            android:textAllCaps="true"
            />

        <Button
            android:id="@+id/followBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/descriptionBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@color/colorDefault"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/nameUserBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/deleteBoard"
            android:text="Eliminar Tablero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/editBoard"
            android:text="Editar Tablero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_followbutton"
            android:layout_margin="10dp"
            android:padding="5dp"
            />

    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refreshBoard"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>