<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/nameBoardViewBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Name Board"
        ></TextView>

    <TextView
        android:id="@+id/descriptionBoardViewBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Description Board"
        ></TextView>


    <TextView
        android:id="@+id/nameUserBoardViewBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Name Creator"
        ></TextView>

    <Button
        android:id="@+id/followBoardViewBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seguir Tablero"
        ></Button>

    <Button
        android:id="@+id/editBoardViewBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Tablero"
        ></Button>

    <Button
        android:id="@+id/deleteBoardViewBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Tablero"
        ></Button>

    <FrameLayout
        android:id="@+id/frameLayoutViewBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>